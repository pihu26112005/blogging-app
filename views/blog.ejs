<!DOCTYPE html>
<html lang="en">
<head>
   <%- include('./partials/head') %>
   <title>Home Page</title>
</head>
<body>
    <%- include('./partials/script') %>
    <%- include('./partials/nav') %>

    <div class="container mt-4">
        <h1><%= blog.title %></h1>
        <img src="<%= blog.backcoverURL %>" width="700px">
        <pre class="mt-3"><%= blog.body %></pre>
    </div>

    <div class="container mt-4">
        <img src="<%= blog.createdby.profileImageURL %>" width="50px">
        <pre><%= blog.createdby.firstname %></pre>
    </div>

    <div class="container mt-4" style="background-color: #f0f0f0;">
        <H2>COMMENTS (<%= comment.length %>) </H2>

        <% if (locals.user) { %>
            <div class="container mt-4" >
                <form action="/blog/<%= blog._id %>/comment" method="post">
                    <input type="text" name="content" id="content" class="form-control" placeholder="enter you comment">
                    <button type="submit" class="btn btn-sm btn-primary">Share</button>
                </form>
            </div>
        <% } %>
        
        <div class="container mt-4" style="background-color: #d9eeed;">
            <% comment.forEach(c => { %>
                <img src="<%= c.createdby.profileImageURL %>" width="50px">
                <pre><%= c.createdby.firstname %></pre>
                <pre><%= c.content %></pre>
            <% }) %>
        </div>
    </div>

</body>
</html> 